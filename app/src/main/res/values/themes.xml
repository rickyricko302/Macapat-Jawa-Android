<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MacapatJawa" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:textViewStyle">@style/TextStyling</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/bg</item>
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextStyling" parent="Widget.AppCompat.TextView">
        <item name="android:typeface">serif</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    <style name="SplashTheme" parent="Theme.MacapatJawa">
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:navigationBarColor">@color/bg</item>
    </style>
</resources>