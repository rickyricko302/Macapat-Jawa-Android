<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.SplashScreen" android:background="@color/bg"
        app:layoutDescription="@xml/activity_splash_screen_scene">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="vertical" app:layout_constraintBottom_toTopOf="@+id/imageView3"
                  android:layout_marginBottom="50dp"
                  android:id="@+id/linearLayout3">
        <TextView
                android:text="Macapat Jawa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>
        <TextView
                android:text="By Ricky V | _Hikki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                android:textColor="@color/white" android:textSize="15sp"/>
    </LinearLayout>

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/boyjawa" android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <View
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/view2"
            android:background="@color/white" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>
    <View
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/view4" android:background="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/view2" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginTop="20dp" android:layout_marginEnd="10dp"/>
    <View
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/view5"
            android:background="@color/white" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/view2" android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"/>
    <View
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/view6"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintEnd_toStartOf="@+id/view4"
            android:layout_marginTop="20dp" android:layout_marginEnd="10dp"/>
    <View
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/view7"
            android:background="@color/white" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/view5" android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>
</androidx.constraintlayout.motion.widget.MotionLayout>